<div class="min-h-screen bg-gray-50">
  <nav class="bg-white border-b border-gray-200">
    <div class="max-w-3xl mx-auto px-6 py-4 flex items-center justify-between">
      <span class="text-lg font-semibold text-gray-900">Stream</span>
      <%= link_to "Back", root_path, class: "text-sm font-medium text-blue-600 hover:text-blue-800 transition" %>
    </div>
  </nav>

  <main class="max-w-3xl mx-auto px-6 py-6">
    <%= form_with url: stream_path, method: :get, class: "bg-white rounded-xl shadow-sm border border-gray-200 px-4 py-3 mb-6" do %>
      <div class="flex items-center justify-between gap-3">
        <div class="flex flex-wrap gap-2">
          <% %w[measurements food exercise journal].each do |type| %>
            <% active = @active_types.include?(type) %>
            <button type="button"
              class="px-3 py-1.5 rounded-full text-sm font-medium border transition cursor-pointer <%= active ? 'bg-blue-600 text-white border-blue-600' : 'bg-white text-gray-600 border-gray-300 hover:border-gray-400' %>"
              onclick="var cb=this.nextElementSibling;cb.checked=!cb.checked;this.closest('form').requestSubmit();">
              <%= type.capitalize %>
            </button>
            <input type="checkbox" name="types[]" value="<%= type %>"
              <%= "checked" if active %> style="display:none">
          <% end %>
        </div>
        <div class="flex items-center gap-2 shrink-0">
          <input type="date" name="start_date" value="<%= @start_date %>"
            onblur="this.closest('form').requestSubmit()"
            class="rounded-lg border border-gray-300 px-2 py-1.5 text-sm text-gray-900 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 outline-none transition">
          <span class="text-xs text-gray-400">â€”</span>
          <input type="date" name="end_date" value="<%= @end_date %>"
            onblur="this.closest('form').requestSubmit()"
            class="rounded-lg border border-gray-300 px-2 py-1.5 text-sm text-gray-900 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 outline-none transition">
        </div>
      </div>
    <% end %>

    <% if @entries.empty? %>
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-5 text-center text-gray-400">
        No entries found
      </div>
    <% else %>
      <% @entries.group_by { |e| e[:timestamp].to_date }.each do |date, day_entries| %>
        <div class="mb-8">
          <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-2 px-1">
            <%= date == Date.current ? "Today" : date == Date.yesterday ? "Yesterday" : date.strftime("%B %-d, %Y") %>
          </h3>
          <div class="space-y-2">
            <% day_entries.each do |entry| %>
              <% record = entry[:record] %>
              <% case entry[:type] %>
              <% when "measurements" %>
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 px-4 py-3">
                  <div class="grid grid-cols-2 gap-3">
                    <% record.each do |m| %>
                      <div>
                        <p class="text-xs font-medium text-green-600 uppercase tracking-wide"><%= m.metric.name %></p>
                        <% display_val = m.value % 1 == 0 ? number_with_delimiter(m.value.to_i) : number_with_delimiter(m.value) %>
                        <p class="text-lg font-bold text-gray-900">
                          <%= display_val %>
                          <% if m.metric.units.present? %>
                            <span class="text-xs font-normal text-gray-400"><%= m.metric.units %></span>
                          <% end %>
                        </p>
                        <% if user_signed_in? %>
                          <div class="flex items-center gap-2">
                            <%= link_to "Trends", measurement_path(metric_slug: m.metric.slug),
                                  class: "text-xs font-medium text-blue-600 hover:text-blue-800 transition" %>
                            <%= link_to edit_measurement_path(m), class: "inline-flex items-center justify-center w-3.5 h-3.5 rounded-full bg-gray-100 hover:bg-gray-200 transition" do %>
                              <svg class="w-2 h-2 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
                              </svg>
                            <% end %>
                          </div>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                </div>

              <% when "food_cluster" %>
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 px-4 py-3">
                  <div class="flex items-center justify-between mb-1.5">
                    <p class="text-xs font-medium text-orange-600 uppercase tracking-wide">Food</p>
                    <span class="text-xs text-gray-400"><%= record.first.consumed_at.strftime("%-I:%M %p") %></span>
                  </div>
                  <div class="flex flex-wrap items-center gap-1">
                    <% record.each_with_index do |log, i| %>
                      <% food_val = log.value % 1 == 0 ? log.value.to_i : log.value %>
                      <% unit_label = food_val == 1 ? log.unit.singularize : log.unit %>
                      <span class="text-sm text-gray-900"><span class="text-gray-400"><%= food_val %> <%= unit_label %></span> <%= log.food.name %></span>
                      <% if user_signed_in? %>
                        <%= link_to edit_food_log_path(log), class: "inline-flex items-center justify-center w-3.5 h-3.5 rounded-full bg-gray-100 hover:bg-gray-200 transition" do %>
                          <svg class="w-2 h-2 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
                          </svg>
                        <% end %>
                      <% end %>
                      <% if i < record.size - 1 %>
                        <span class="text-gray-300 mx-0.5">,</span>
                      <% end %>
                    <% end %>
                  </div>
                </div>

              <% when "exercise_cluster" %>
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 px-4 py-3">
                  <div class="flex items-center justify-between mb-1.5">
                    <p class="text-xs font-medium text-blue-600 uppercase tracking-wide">Exercise</p>
                    <span class="text-xs text-gray-400"><%= record.first.performed_at.strftime("%-I:%M %p") %></span>
                  </div>
                  <div class="flex flex-wrap items-center gap-1">
                    <% record.each_with_index do |log, i| %>
                      <span class="text-sm text-gray-900"><%= log.exercise.name %></span>
                      <% if user_signed_in? %>
                        <%= link_to edit_exercise_log_path(log), class: "inline-flex items-center justify-center w-3.5 h-3.5 rounded-full bg-gray-100 hover:bg-gray-200 transition" do %>
                          <svg class="w-2 h-2 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
                          </svg>
                        <% end %>
                      <% end %>
                      <% if i < record.size - 1 %>
                        <span class="text-gray-300 mx-0.5">,</span>
                      <% end %>
                    <% end %>
                  </div>
                </div>

              <% when "journal" %>
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 px-4 py-3">
                  <div class="flex items-start justify-between">
                    <div class="flex-1 min-w-0">
                      <p class="text-xs font-medium text-purple-600 uppercase tracking-wide">Journal</p>
                      <p class="text-sm text-gray-900 mt-1 whitespace-pre-wrap"><%= record.body %></p>
                      <% if record.labels.any? %>
                        <div class="mt-1.5 flex items-center gap-1.5 flex-wrap">
                          <% record.labels.each do |label| %>
                            <span class="inline-block px-2 py-0.5 rounded-full text-xs font-medium <%= label_color_classes(label.color) %>"><%= label.name %></span>
                          <% end %>
                        </div>
                      <% end %>
                    </div>
                    <div class="text-right shrink-0 ml-3">
                      <span class="text-xs text-gray-400"><%= record.recorded_at.strftime("%-I:%M %p") %></span>
                      <% if user_signed_in? %>
                        <div class="flex items-center gap-2 mt-0.5">
                          <%= link_to edit_journal_entry_path(record), class: "inline-flex items-center justify-center w-3.5 h-3.5 rounded-full bg-gray-100 hover:bg-gray-200 transition" do %>
                            <svg class="w-2 h-2 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
                            </svg>
                          <% end %>
                          <%= button_to "Delete", journal_entry_path(record), method: :delete,
                                class: "text-xs text-gray-400 hover:text-red-600 transition cursor-pointer",
                                data: { turbo_confirm: "Delete this journal entry?" } %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </main>
</div>
