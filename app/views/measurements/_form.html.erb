<%= form_with model: measurement, url: measurement.persisted? ? update_measurement_path(measurement) : create_measurement_path, method: measurement.persisted? ? :patch : :post, class: "space-y-5" do |f| %>
  <% if measurement.errors.any? %>
    <div class="rounded-lg bg-red-50 border border-red-200 px-4 py-3 text-sm text-red-800">
      <% measurement.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    </div>
  <% end %>

  <div>
    <%= f.label :metric_id, "Metric", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.collection_select :metric_id, metrics, :id, :name_with_units, { prompt: "Select a metric" },
          required: true,
          class: "w-full rounded-lg border border-gray-300 px-4 py-2 text-gray-900 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 outline-none transition" %>
  </div>

  <div>
    <%= f.label :date, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.date_field :date, required: true,
          class: "w-full rounded-lg border border-gray-300 px-4 py-2 text-gray-900 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 outline-none transition" %>
  </div>

  <div>
    <%= f.label :value, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.number_field :value, step: "any", required: true, placeholder: "0",
          class: "w-full rounded-lg border border-gray-300 px-4 py-2 text-gray-900 placeholder-gray-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 outline-none transition" %>
  </div>

  <div>
    <%= f.label :notes, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_area :notes, placeholder: "Optional notes", rows: 3,
          class: "w-full rounded-lg border border-gray-300 px-4 py-2 text-gray-900 placeholder-gray-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 outline-none transition" %>
  </div>

  <div class="flex items-center gap-3 pt-2">
    <%= f.submit class: "bg-blue-600 text-white font-medium px-5 py-2 rounded-lg hover:bg-blue-700 active:bg-blue-800 transition cursor-pointer" %>
    <%= link_to "Cancel", root_path, class: "text-sm text-gray-500 hover:text-gray-700 transition" %>
  </div>
<% end %>
