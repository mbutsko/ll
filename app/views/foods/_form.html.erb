<%= form_with model: food, class: "space-y-5" do |f| %>
  <% if food.errors.any? %>
    <div class="rounded-lg bg-red-50 border border-red-200 px-4 py-3 text-sm text-red-800">
      <% food.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    </div>
  <% end %>

  <div>
    <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :name, required: true, placeholder: "e.g. Peanut Butter",
          class: "w-full rounded-lg border border-gray-300 px-4 py-2 text-gray-900 placeholder-gray-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 outline-none transition" %>
  </div>

  <div>
    <%= f.label :slug, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :slug, required: true, placeholder: "e.g. peanut-butter",
          class: "w-full rounded-lg border border-gray-300 px-4 py-2 text-gray-900 placeholder-gray-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 outline-none transition" %>
    <p class="mt-1 text-xs text-gray-400">Lowercase identifier.</p>
  </div>

  <div>
    <%= f.label :default_unit, "Default Unit", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.select :default_unit, Food::UNITS.map { |u| [u.capitalize, u] },
          {}, class: "w-full rounded-lg border border-gray-300 px-4 py-2 text-gray-900 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 outline-none transition" %>
  </div>

  <div class="flex items-center gap-3 pt-2">
    <%= f.submit class: "bg-blue-600 text-white font-medium px-5 py-2 rounded-lg hover:bg-blue-700 active:bg-blue-800 transition cursor-pointer" %>
    <%= link_to "Cancel", foods_path, class: "text-sm text-gray-500 hover:text-gray-700 transition" %>
  </div>
<% end %>
