<div class="min-h-screen flex items-center justify-center px-6">
  <div class="w-full max-w-sm">
    <h2 class="text-2xl font-bold text-gray-900 text-center mb-8">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-5" }) do |f| %>
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full rounded-lg border border-gray-300 px-4 py-2.5 text-gray-900 placeholder-gray-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 outline-none transition" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password",
              class: "w-full rounded-lg border border-gray-300 px-4 py-2.5 text-gray-900 placeholder-gray-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 outline-none transition" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center gap-2">
          <%= f.check_box :remember_me, class: "rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
          <%= f.label :remember_me, class: "text-sm text-gray-600" %>
        </div>
      <% end %>

      <div>
        <%= f.submit "Log in",
              class: "w-full bg-blue-600 text-white font-medium px-5 py-2.5 rounded-lg hover:bg-blue-700 active:bg-blue-800 transition cursor-pointer" %>
      </div>
    <% end %>

    <div class="mt-6 text-center space-y-2">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
