<div class="min-h-screen flex items-center justify-center px-6">
  <div class="w-full max-w-sm">
    <h2 class="text-2xl font-bold text-gray-900 text-center mb-8">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-5" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full rounded-lg border border-gray-300 px-4 py-2.5 text-gray-900 placeholder-gray-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 outline-none transition" %>
      </div>

      <div>
        <%= f.submit "Send reset instructions",
              class: "w-full bg-blue-600 text-white font-medium px-5 py-2.5 rounded-lg hover:bg-blue-700 active:bg-blue-800 transition cursor-pointer" %>
      </div>
    <% end %>

    <div class="mt-6 text-center space-y-2">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
