<div class="min-h-screen flex items-center justify-center px-6">
  <div class="w-full max-w-sm">
    <h2 class="text-2xl font-bold text-gray-900 text-center mb-8">Change your password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-5" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div>
        <%= f.label :password, "New password", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <% if @minimum_password_length %>
          <p class="text-xs text-gray-400 mb-1"><%= @minimum_password_length %> characters minimum</p>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password",
              class: "w-full rounded-lg border border-gray-300 px-4 py-2.5 text-gray-900 placeholder-gray-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 outline-none transition" %>
      </div>

      <div>
        <%= f.label :password_confirmation, "Confirm new password", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "w-full rounded-lg border border-gray-300 px-4 py-2.5 text-gray-900 placeholder-gray-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 outline-none transition" %>
      </div>

      <div>
        <%= f.submit "Change my password",
              class: "w-full bg-blue-600 text-white font-medium px-5 py-2.5 rounded-lg hover:bg-blue-700 active:bg-blue-800 transition cursor-pointer" %>
      </div>
    <% end %>

    <div class="mt-6 text-center space-y-2">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
