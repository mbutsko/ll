<%= form_with model: metric, class: "space-y-5" do |f| %>
  <% if metric.errors.any? %>
    <div class="rounded-lg bg-red-50 border border-red-200 px-4 py-3 text-sm text-red-800">
      <% metric.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    </div>
  <% end %>

  <div>
    <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :name, required: true, placeholder: "e.g. Weight",
          class: "w-full rounded-lg border border-gray-300 px-4 py-2 text-gray-900 placeholder-gray-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 outline-none transition" %>
  </div>

  <div>
    <%= f.label :slug, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :slug, required: true, placeholder: "e.g. weight",
          class: "w-full rounded-lg border border-gray-300 px-4 py-2 text-gray-900 placeholder-gray-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 outline-none transition" %>
    <p class="mt-1 text-xs text-gray-400">Lowercase identifier used in the API. Cannot be changed once measurements exist.</p>
  </div>

  <div>
    <%= f.label :units, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :units, placeholder: "e.g. lbs, ms, bpm (optional)",
          class: "w-full rounded-lg border border-gray-300 px-4 py-2 text-gray-900 placeholder-gray-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 outline-none transition" %>
  </div>

  <div class="grid grid-cols-2 gap-4">
    <div>
      <%= f.label :reference_min, "Reference Min", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.number_field :reference_min, step: "any", placeholder: "optional",
            class: "w-full rounded-lg border border-gray-300 px-4 py-2 text-gray-900 placeholder-gray-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 outline-none transition" %>
    </div>
    <div>
      <%= f.label :reference_max, "Reference Max", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.number_field :reference_max, step: "any", placeholder: "optional",
            class: "w-full rounded-lg border border-gray-300 px-4 py-2 text-gray-900 placeholder-gray-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 outline-none transition" %>
    </div>
  </div>

  <div class="flex items-center gap-2">
    <%= f.check_box :delta_down_is_good, class: "rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
    <%= f.label :delta_down_is_good, "Lower is better", class: "text-sm text-gray-700" %>
    <p class="text-xs text-gray-400">(e.g. weight, resting heart rate)</p>
  </div>

  <div class="flex items-center gap-3 pt-2">
    <%= f.submit class: "bg-blue-600 text-white font-medium px-5 py-2 rounded-lg hover:bg-blue-700 active:bg-blue-800 transition cursor-pointer" %>
    <%= link_to "Cancel", metrics_path, class: "text-sm text-gray-500 hover:text-gray-700 transition" %>
  </div>
<% end %>
