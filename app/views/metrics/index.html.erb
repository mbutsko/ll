<div class="min-h-screen bg-gray-50">
  <nav class="bg-white border-b border-gray-200">
    <div class="max-w-5xl mx-auto px-6 py-4 flex items-center justify-between">
      <span class="text-lg font-semibold text-gray-900">Manage Metrics</span>
      <%= link_to "Back to Dashboard", root_path, class: "text-sm text-gray-500 hover:text-gray-700 transition" %>
    </div>
  </nav>

  <main class="max-w-5xl mx-auto px-6 py-10">
    <% if notice %>
      <div class="mb-6 rounded-lg bg-green-50 border border-green-200 px-4 py-3 text-sm text-green-800"><%= notice %></div>
    <% end %>

    <div class="flex items-center justify-between mb-6">
      <h1 class="text-2xl font-bold text-gray-900">Metrics</h1>
      <%= link_to "Add Metric", new_metric_path,
            class: "bg-blue-600 text-white font-medium px-4 py-2 rounded-lg hover:bg-blue-700 active:bg-blue-800 transition text-sm" %>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-gray-200 divide-y divide-gray-100">
      <% @metrics.each do |metric| %>
        <div class="p-5 flex items-center justify-between">
          <div>
            <p class="font-medium text-gray-900"><%= metric.name %></p>
            <p class="text-sm text-gray-500">
              <code class="bg-gray-100 px-1.5 py-0.5 rounded text-xs"><%= metric.slug %></code>
              <% if metric.units.present? %>
                &middot; <%= metric.units %>
              <% end %>
              <% if metric.reference_min.present? || metric.reference_max.present? %>
                &middot; range: <%= metric.reference_min || "–" %> – <%= metric.reference_max || "–" %>
              <% end %>
              &middot; <%= metric.delta_down_is_good? ? "lower is better" : "higher is better" %>
              <% if metric.daily_loggable? %>
                &middot; <span class="text-green-600">daily</span>
              <% end %>
            </p>
          </div>
          <div class="flex items-center gap-3">
            <%= link_to "View", measurement_path(metric_slug: metric.slug), class: "text-sm text-blue-600 hover:text-blue-800 font-medium transition" %>
            <%= link_to "Edit", edit_metric_path(metric), class: "text-sm text-blue-600 hover:text-blue-800 font-medium transition" %>
            <%= button_to "Delete", metric_path(metric), method: :delete,
                  class: "text-sm text-red-600 hover:text-red-800 font-medium transition cursor-pointer",
                  data: { turbo_confirm: "Delete #{metric.name}? This will also delete all its measurements." } %>
          </div>
        </div>
      <% end %>

      <% if @metrics.empty? %>
        <div class="p-5 text-center text-gray-400">No metrics yet.</div>
      <% end %>
    </div>
  </main>
</div>
