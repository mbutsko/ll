<div class="min-h-screen bg-gray-50">
  <nav class="bg-white border-b border-gray-200">
    <div class="max-w-5xl mx-auto px-6 py-4 flex items-center justify-between">
      <span class="text-lg font-semibold text-gray-900">Manage Labels</span>
      <%= link_to "Back to Dashboard", root_path, class: "text-sm text-gray-500 hover:text-gray-700 transition" %>
    </div>
  </nav>

  <main class="max-w-5xl mx-auto px-6 py-10">
    <% if notice %>
      <div class="mb-6 rounded-lg bg-green-50 border border-green-200 px-4 py-3 text-sm text-green-800"><%= notice %></div>
    <% end %>

    <div class="flex items-center justify-between mb-6">
      <h1 class="text-2xl font-bold text-gray-900">Labels</h1>
      <%= link_to "Add Label", new_label_path,
            class: "bg-blue-600 text-white font-medium px-4 py-2 rounded-lg hover:bg-blue-700 active:bg-blue-800 transition text-sm" %>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-gray-200 divide-y divide-gray-100">
      <% @labels.each do |label| %>
        <div class="p-5 flex items-center justify-between">
          <div class="flex items-center gap-3">
            <span class="inline-block px-2.5 py-1 rounded-full text-xs font-medium <%= label_color_classes(label.color) %>"><%= label.name %></span>
            <code class="bg-gray-100 px-1.5 py-0.5 rounded text-xs text-gray-500"><%= label.slug %></code>
          </div>
          <div class="flex items-center gap-3">
            <%= link_to "Edit", edit_label_path(label), class: "text-sm text-blue-600 hover:text-blue-800 font-medium transition" %>
            <%= button_to "Delete", label_path(label), method: :delete,
                  class: "text-sm text-red-600 hover:text-red-800 font-medium transition cursor-pointer",
                  data: { turbo_confirm: "Delete #{label.name}? This will remove it from all journal entries." } %>
          </div>
        </div>
      <% end %>

      <% if @labels.empty? %>
        <div class="p-5 text-center text-gray-400">No labels yet.</div>
      <% end %>
    </div>
  </main>
</div>
